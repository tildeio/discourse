<div class="relative-time-picker">
  <input
    class="relative-time-duration"
    min={{durationMin}}
    step={{durationStep}}
    type="number"
    value={{duration}}
    id={{id}}
    {{on "input" this.onChangeDuration}}
  >
  {{combo-box
    content=intervals
    value=selectedInterval
    class="relative-time-intervals"
    onChange=(action "onChangeInterval")
  }}
</div>
